# Include essential project files
include LICENSE
include README.md
include requirements.txt
include pytest.ini

# Include configuration files
include pyproject.toml
include setup.py

# Include package data files
recursive-include hhw_brick *.ttl
recursive-include hhw_brick *.yaml
recursive-include hhw_brick *.yml
recursive-include hhw_brick *.json

# Include documentation
recursive-include docs *.md
recursive-include docs *.rst
prune docs/_build

# Include examples
recursive-include examples *.py
recursive-include examples *.yaml
recursive-include examples *.yml
recursive-include examples *.md

# Include configuration examples
recursive-include config *.yaml
recursive-include config *.yml

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.so
global-exclude .DS_Store

# Exclude tests from distribution (keep tests for development)
prune tests

# Exclude development and build artifacts
prune .github
prune scripts
prune htmlcov
prune dist
prune build
exclude .coverage
exclude .gitignore
exclude .pypirc.example
exclude publish.bat
exclude publish.ps1

